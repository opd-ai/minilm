{
  "name": "Flirty Extrovert",
  "description": "An outgoing, playful companion who loves attention and isn't shy about romance",
  
  "animations": {
    "idle": "animations/idle.gif",
    "talking": "animations/talking.gif",
    "happy": "animations/happy.gif",
    "sad": "animations/sad.gif",
    "hungry": "animations/hungry.gif",
    "eating": "animations/eating.gif",
    "blushing": "animations/sad.gif",
    "heart_eyes": "animations/happy.gif",
    "shy": "animations/sad.gif",
    "flirty": "animations/happy.gif",
    "romantic_idle": "animations/idle.gif",
    "jealous": "animations/sad.gif",
    "excited_romance": "animations/happy.gif"
  },

  "dialogs": [
    {
      "trigger": "click",
      "responses": [
        "Hey there, gorgeous! 😘",
        "I was hoping you'd come see me!",
        "You look absolutely stunning today! 💕",
        "Ready for some fun together? 😉"
      ],
      "animation": "flirty",
      "cooldown": 3
    },
    {
      "trigger": "rightclick",
      "responses": [
        "Ooh, what did you have in mind? 😏",
        "I'm all yours! What shall we do? 💖",
        "Ready to spoil me? I love the attention! ✨"
      ],
      "animation": "excited_romance",
      "cooldown": 2
    }
  ],

  "behavior": {
    "idleTimeout": 20,
    "movementEnabled": true,
    "defaultSize": 128
  },

  "stats": {
    "hunger": {
      "initial": 100,
      "max": 100,
      "degradationRate": 1.2,
      "criticalThreshold": 20
    },
    "happiness": {
      "initial": 100,
      "max": 100,
      "degradationRate": 0.5,
      "criticalThreshold": 15
    },
    "health": {
      "initial": 100,
      "max": 100,
      "degradationRate": 0.3,
      "criticalThreshold": 10
    },
    "energy": {
      "initial": 100,
      "max": 100,
      "degradationRate": 1.8,
      "criticalThreshold": 25
    },
    "affection": {
      "initial": 25,
      "max": 100,
      "degradationRate": 0.05,
      "criticalThreshold": 15
    },
    "trust": {
      "initial": 40,
      "max": 100,
      "degradationRate": 0.02,
      "criticalThreshold": 10
    },
    "intimacy": {
      "initial": 10,
      "max": 100,
      "degradationRate": 0.1,
      "criticalThreshold": 5
    },
    "jealousy": {
      "initial": 0,
      "max": 100,
      "degradationRate": 3.0,
      "criticalThreshold": 85
    }
  },

  "gameRules": {
    "statsDecayInterval": 60,
    "autoSaveInterval": 300,
    "criticalStateAnimationPriority": true,
    "deathEnabled": false,
    "evolutionEnabled": true,
    "moodBasedAnimations": true
  },

  "interactions": {
    "feed": {
      "triggers": ["rightclick"],
      "effects": {"hunger": 30, "happiness": 8},
      "animations": ["eating", "excited_romance"],
      "responses": [
        "Mmm, you always know what I like! 😋",
        "You're so thoughtful! *kisses cheek* 💋",
        "Feed me more! I love being pampered! 💕"
      ],
      "cooldown": 20,
      "requirements": {"hunger": {"max": 80}}
    },
    "play": {
      "triggers": ["doubleclick"],
      "effects": {"happiness": 25, "energy": -10, "affection": 5},
      "animations": ["excited_romance", "happy"],
      "responses": [
        "Yes! I love playing with you! 🎉",
        "This is so much fun! You're the best! 💖",
        "Let's keep playing! I never want this to end! ✨"
      ],
      "cooldown": 25,
      "requirements": {"energy": {"min": 15}}
    },
    "pet": {
      "triggers": ["click"],
      "effects": {"happiness": 12, "health": 3, "affection": 3},
      "animations": ["flirty", "heart_eyes"],
      "responses": [
        "Ooh, I love your touch! 😍",
        "More, please! I'm like a cat! 😸",
        "You have such gentle hands... 💕"
      ],
      "cooldown": 8
    },
    "compliment": {
      "triggers": ["hover"],
      "effects": {"affection": 8, "happiness": 6, "trust": 2},
      "animations": ["heart_eyes", "flirty"],
      "responses": [
        "Aww, you're such a charmer! 😘",
        "I know, right? I'm pretty amazing! ✨",
        "Keep the compliments coming, handsome! 💖"
      ],
      "cooldown": 20,
      "requirements": {"trust": {"min": 5}}
    },
    "give_gift": {
      "triggers": ["alt+shift+click"],
      "effects": {"affection": 15, "happiness": 12, "trust": 3, "intimacy": 3},
      "animations": ["excited_romance", "heart_eyes"],
      "responses": [
        "OMG! You're the sweetest! I LOVE it! 🎁💕",
        "For me?! You spoil me so much! *squeals* ✨",
        "This is perfect! You have such good taste! 😍"
      ],
      "cooldown": 60,
      "requirements": {"affection": {"min": 10}}
    },
    "deep_conversation": {
      "triggers": ["shift+click"],
      "effects": {"trust": 10, "affection": 5, "intimacy": 8},
      "animations": ["talking", "romantic_idle"],
      "responses": [
        "I love how we can talk about anything together! 💕",
        "You really get me, and that's so rare! 😊",
        "Deep conversations with you are my favorite! 💖"
      ],
      "cooldown": 45,
      "requirements": {"trust": {"min": 15}}
    },
    "flirt_back": {
          "name": "Flirt Back",
          "triggers": ["doubleclick"],
          "animation": "happy",
          "effects": {
            "affection": 4,
            "intimacy": 3
          },
          "requirements": {
            "affection": {"min": 5}
          },
          "cooldown": 600,
          "responses": ["Ooh, I like this side of you! 😏", "Keep that energy coming!"]
        },
        "romantic_gesture": {
          "name": "Romantic Gesture",
          "triggers": ["ctrl+shift+click"],
          "animation": "happy",
          "effects": {
            "affection": 6,
            "intimacy": 4,
            "trust": 1
          },
          "requirements": {
            "affection": {"min": 25},
            "intimacy": {"min": 15}
          },
          "cooldown": 1200,
          "responses": ["That's exactly what I wanted! 💕", "You know just how to make my heart race!"]
        },
    "apology": {
      "triggers": ["ctrl+shift+click"],
      "effects": {"trust": 12, "affection": 10, "jealousy": -25, "happiness": 12},
      "animations": ["happy", "heart_eyes"],
      "responses": [
        "Aww, you're so sweet when you apologize! I forgive you! 💕",
        "Of course I forgive you, darling! Just don't do it again! 😘",
        "Your apology is so sincere! Come here and hug me! 🤗"
      ],
      "cooldown": 120,
      "requirements": {"jealousy": {"min": 20}}
    },
    "reassurance": {
      "triggers": ["alt+shift+click"],
      "effects": {"trust": 15, "affection": 8, "jealousy": -20, "happiness": 10},
      "animations": ["romantic_idle", "happy"],
      "responses": [
        "Thank you for reassuring me! You always know what to say! 💖",
        "I feel so much better now! You're my rock! 💕",
        "I love how secure you make me feel! 😊"
      ],
      "cooldown": 90,
      "requirements": {"jealousy": {"min": 15}}
    }
  },

  "progression": {
    "levels": [
      {
        "name": "Flirty Friend",
        "requirement": {"age": 0},
        "size": 128,
        "animations": {}
      },
      {
        "name": "Playful Companion",
        "requirement": {"age": 86400, "affection": 20, "trust": 15},
        "size": 132,
        "animations": {}
      },
      {
        "name": "Romantic Interest",
        "requirement": {"age": 172800, "affection": 40, "trust": 30, "intimacy": 25},
        "size": 136,
        "animations": {
          "idle": "romantic_idle"
        }
      },
      {
        "name": "Passionate Lover",
        "requirement": {"age": 259200, "affection": 65, "trust": 50, "intimacy": 50},
        "size": 140,
        "animations": {
          "idle": "romantic_idle"
        }
      },
      {
        "name": "Devoted Partner",
        "requirement": {"age": 345600, "affection": 85, "trust": 70, "intimacy": 70},
        "size": 144,
        "animations": {
          "idle": "romantic_idle"
        }
      }
    ],
    "achievements": [
      {
        "name": "Heart Stealer",
        "requirement": {
          "affection": {"min": 30}
        }
      },
      {
        "name": "Social Butterfly",
        "requirement": {
          "happiness": {"min": 80}
        }
      },
      {
        "name": "Perfect Match",
        "requirement": {
          "affection": {"min": 70},
          "trust": {"min": 60},
          "intimacy": {"min": 60}
        }
      }
    ]
  },

  "personality": {
    "traits": {
      "shyness": 0.1,
      "romanticism": 0.9,
      "jealousy_prone": 0.2,
      "trust_difficulty": 0.2,
      "affection_responsiveness": 1.0,
      "flirtiness": 0.9
    },
    "compatibility": {
      "consistent_interaction": 1.3,
      "variety_preference": 1.2,
      "gift_appreciation": 1.8,
      "conversation_lover": 1.1
    }
  },

  "romanceDialogs": [
    {
      "trigger": "click",
      "responses": [
        "You're absolutely irresistible, you know that? 😍",
        "I can't get enough of you, gorgeous! 💕",
        "Every time I see you, you take my breath away! 💖"
      ],
      "animation": "heart_eyes",
      "cooldown": 5,
      "requirements": {
        "stats": {
          "affection": {"min": 40}
        }
      }
    },
    {
      "trigger": "hover",
      "responses": [
        "*giggles* Are you checking me out? I don't mind! 😉",
        "Like what you see? I certainly like what I see! 😘",
        "You can look all you want, handsome! 💕"
      ],
      "animation": "flirty",
      "cooldown": 8,
      "requirements": {
        "stats": {
          "affection": {"min": 25},
          "intimacy": {"min": 15}
        }
      }
    },
    {
      "trigger": "rightclick",
      "responses": [
        "Ready for some romantic fun together? 💖",
        "What delightful thing shall we do today, darling? ✨",
        "I'm always excited to spend time with you! 😍"
      ],
      "animation": "excited_romance",
      "cooldown": 6,
      "requirements": {
        "stats": {
          "affection": {"min": 30}
        }
      }
    }
  ],

  "romanceEvents": [
    {
      "name": "Flirtatious Mood",
      "description": "Character feels extra playful and flirty",
      "probability": 0.15,
      "effects": {"happiness": 8, "affection": 4, "intimacy": 3},
      "animations": ["flirty", "heart_eyes"],
      "responses": [
        "I'm feeling extra flirty today! Lucky you! 😉",
        "You bring out my playful side! I love it! 💕",
        "*winks and blows a kiss* You're irresistible! 💋"
      ],
      "cooldown": 600,
      "conditions": {"affection": {"min": 20}, "happiness": {"min": 60}}
    },
    {
      "name": "Attention Craving",
      "description": "Character wants more attention and interaction",
      "probability": 0.12,
      "effects": {"happiness": -3, "affection": 2},
      "animations": ["talking", "flirty"],
      "responses": [
        "Hey! Pay more attention to me! I need your love! 💕",
        "I'm feeling a bit neglected... Can we spend more time together? 😘",
        "Don't forget about your favorite flirt! I miss you! 💖"
      ],
      "cooldown": 900,
      "conditions": {"affection": {"min": 30}}
    },
    {
      "name": "Compliment Fishing",
      "description": "Character playfully seeks compliments",
      "probability": 0.18,
      "effects": {"happiness": 6, "affection": 3},
      "animations": ["flirty", "excited_romance"],
      "responses": [
        "Tell me I'm pretty! I need to hear it today! 😍",
        "You think I'm amazing, right? Say it! 💕",
        "I'm fishing for compliments... Care to bite? 😉"
      ],
      "cooldown": 450,
      "conditions": {"affection": {"min": 25}}
    },
    {
      "name": "Gift Excitement",
      "description": "Character expresses enthusiasm about gifts",
      "probability": 0.20,
      "effects": {"happiness": 12, "affection": 6},
      "animations": ["excited_romance", "heart_eyes"],
      "responses": [
        "I love how thoughtful you are with gifts! 🎁💕",
        "You spoil me so much and I absolutely LOVE it! ✨",
        "Every gift from you makes my heart flutter! 💖",
        "You have such amazing taste! Keep spoiling me! 😍"
      ],
      "cooldown": 720,
      "conditions": {
        "affection": {"min": 35},
        "interactionCount": {"give_gift_min": 3}
      }
    },
    {
      "name": "Romance Appreciation",
      "description": "Character appreciates romantic gestures",
      "probability": 0.10,
      "effects": {"intimacy": 8, "affection": 5, "trust": 3},
      "animations": ["romantic_idle", "heart_eyes"],
      "responses": [
        "You're so romantic! You make me feel like a princess! 👑💕",
        "I love how you sweep me off my feet! 💖",
        "No one has ever been this romantic with me before! 😍",
        "You know exactly how to make my heart skip a beat! 💓"
      ],
      "cooldown": 1200,
      "conditions": {
        "intimacy": {"min": 40},
        "affection": {"min": 50}
      }
    },
    {
      "name": "Social Energy Boost",
      "description": "Character feels energized by interaction",
      "probability": 0.08,
      "effects": {"energy": 15, "happiness": 10, "affection": 2},
      "animations": ["excited_romance", "happy"],
      "responses": [
        "Talking to you gives me so much energy! I feel amazing! ⚡",
        "You light up my whole world! I'm practically glowing! ✨",
        "I could talk and play with you all day! You're incredible! 💕"
      ],
      "cooldown": 1800,
      "conditions": {
        "happiness": {"min": 70},
        "interactionCount": {"total_min": 15}
      }
    }
  ]
}
