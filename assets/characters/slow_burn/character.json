  "name": "Slow Burn Romance",
  "description": "A thoughtful, reserved companion who values deep connection and takes time to open up",
  "dialogs": [
    {
      "trigger": "click",
      "responses": [
        "Hello. It's nice to see you again.",
        "I appreciate your company.",
        "How has your day been?",
        "Thank you for spending time with me."
      ],
      "animation": "talking",
      "cooldown": 12
    },
    {
      "trigger": "rightclick",
      "responses": [
        "Is there something I can help you with?",
        "I'm here if you need anything.",
        "What would you like to do together?"
      ],
      "animation": "idle",
      "cooldown": 8
    }
  ],

  "behavior": {
    "idleTimeout": 60,
    "movementEnabled": true,
    "defaultSize": 128
  },

  "stats": {
    "hunger": {
      "initial": 100,
      "max": 100,
      "degradationRate": 0.8,
      "criticalThreshold": 20
    },
    "happiness": {
      "initial": 75,
      "max": 100,
      "degradationRate": 0.6,
      "criticalThreshold": 15
    },
    "health": {
      "initial": 100,
      "max": 100,
      "degradationRate": 0.2,
      "criticalThreshold": 10
    },
    "energy": {
      "initial": 100,
      "max": 100,
      "degradationRate": 1.0,
      "criticalThreshold": 25
    },
    "affection": {
      "initial": 0,
      "max": 100,
      "degradationRate": 0.05,
      "criticalThreshold": 5
    },
    "trust": {
      "initial": 10,
      "max": 100,
      "degradationRate": 0.02,
      "criticalThreshold": 2
    },
    "intimacy": {
      "initial": 0,
      "max": 100,
      "degradationRate": 0.1,
      "criticalThreshold": 0
    },
    "jealousy": {
      "initial": 0,
      "max": 100,
      "degradationRate": 2.5,
      "criticalThreshold": 90
    }
  },

  "gameRules": {
    "statsDecayInterval": 90,
    "autoSaveInterval": 300,
    "criticalStateAnimationPriority": true,
    "deathEnabled": false,
    "evolutionEnabled": true,
    "moodBasedAnimations": true
  },

  "interactions": {
    "feed": {
      "triggers": ["rightclick"],
      "effects": {"hunger": 20, "happiness": 2, "trust": 1},
      "animations": ["eating", "happy"],
      "responses": [
        "Thank you for the meal. It's quite good.",
        "I appreciate your thoughtfulness.",
        "This is exactly what I needed."
      ],
      "cooldown": 60,
      "requirements": {"hunger": {"max": 85}}
    },
    "play": {
      "triggers": ["doubleclick"],
      "effects": {"happiness": 12, "energy": -20, "affection": 1, "trust": 1},
      "animations": ["happy"],
      "responses": [
        "That was... actually quite enjoyable.",
        "I don't usually play, but this was nice.",
        "Thank you for including me in this."
      ],
      "cooldown": 90,
      "requirements": {"energy": {"min": 25}, "trust": {"min": 10}}
    },
    "pet": {
      "triggers": ["click"],
      "effects": {"happiness": 6, "health": 1, "trust": 1},
      "animations": ["happy"],
      "responses": [
        "That's... comforting.",
        "I appreciate gentle gestures like this.",
        "Your touch is very calming."
      ],
      "cooldown": 30,
      "requirements": {"trust": {"min": 5}}
    },
    "compliment": {
      "triggers": ["hover"],
      "effects": {"affection": 2, "happiness": 3, "trust": 1},
      "animations": ["blushing", "happy"],
      "responses": [
        "That's very kind of you to say.",
        "I... thank you. That means a lot.",
        "Your words are always so thoughtful."
      ],
      "cooldown": 120,
      "requirements": {"trust": {"min": 15}}
    },
    "give_gift": {
          "name": "Give Gift",
          "triggers": ["shift+click"],
          "animation": "happy",
          "effects": {
            "affection": 2,
            "trust": 3
          },
          "requirements": {
            "affection": {"min": 20},
            "trust": {"min": 30}
          },
          "cooldown": 3600,
          "responses": ["This is really thoughtful, thank you.", "I appreciate the consideration."]
        },
    "deep_conversation": {
      "triggers": ["shift+click"],
      "effects": {"trust": 8, "affection": 3, "intimacy": 5},
      "animations": ["talking", "romantic_idle"],
      "responses": [
        "I enjoy our meaningful conversations.",
        "It's rare to find someone who truly listens.",
        "Thank you for understanding me."
      ],
      "cooldown": 150,
      "requirements": {"trust": {"min": 30}}
    },
    "intimate_moment": {
      "triggers": ["alt+shift+click"],
      "effects": {"intimacy": 8, "affection": 5, "trust": 2},
      "animations": ["romantic_idle", "blushing"],
      "responses": [
        "This feels... right. Thank you for being patient.",
        "I've never felt this comfortable with anyone before.",
        "You make me feel safe to be vulnerable."
      ],
      "cooldown": 300,
      "requirements": {"trust": {"min": 50}, "affection": {"min": 40}, "intimacy": {"min": 25}}
    },
    "commitment_talk": {
      "triggers": ["ctrl+shift+click"],
      "effects": {"trust": 12, "affection": 8, "intimacy": 10},
      "animations": ["romantic_idle", "heart_eyes"],
      "responses": [
        "I've been thinking about us too... This is serious for me.",
        "You mean more to me than I ever thought possible.",
        "I'm ready to take this relationship to the next level."
      ],
      "cooldown": 600,
      "requirements": {"trust": {"min": 70}, "affection": {"min": 60}, "intimacy": {"min": 50}}
    },
    "apology": {
      "triggers": ["ctrl+shift+click"],
      "effects": {"trust": 15, "affection": 6, "jealousy": -20, "happiness": 8},
      "animations": ["talking", "happy"],
      "responses": [
        "I accept your apology. These things take time to work through.",
        "Thank you for being mature about this. I appreciate it.",
        "Your sincerity means everything to me. We'll be okay."
      ],
      "cooldown": 300,
      "requirements": {"jealousy": {"min": 30}}
    },
    "reassurance": {
      "triggers": ["alt+shift+click"],
      "effects": {"trust": 18, "affection": 5, "jealousy": -15, "happiness": 6},
      "animations": ["romantic_idle", "happy"],
      "responses": [
        "Thank you for your patience. I needed to hear that.",
        "Your reassurance helps me trust in what we have.",
        "I'm learning to believe in us, thanks to you."
      ],
      "cooldown": 240,
      "requirements": {"jealousy": {"min": 20}}
    }
  },

